{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
    },
    "include": ["api/src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  